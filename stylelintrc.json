{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-tailwindcss"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind",
					"apply",
					"layer",
					"variants",
					"responsive",
					"screen"
				]
			}
		],
		"at-rule-no-deprecated": null,
		"no-descending-specificity": null,
		"function-no-unknown": [
			true,
			{
				"ignoreFunctions": [
					"theme"
				]
			}
		],
		"color-hex-length": null,
		"custom-property-empty-line-before": null
	},
	"overrides": [
		{
			"files": [
				"**/*.css",
				"**/*.scss"
			],
			"customSyntax": "postcss-syntax"
		}
	]
}